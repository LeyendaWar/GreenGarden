<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    tools:context=".SingUpActivity">

    <TextView
        android:id="@+id/TVSingUp"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:paddingTop="90dp"
        android:paddingBottom="20dp"
        android:text="Sing Up"
        android:textColor="#92D36E"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TVEmailLoginSU"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:paddingTop="35dp"
        android:paddingBottom="10dp"
        android:text="Email"
        android:textColor="#92D36E"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/ETEmailSU"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Your email address"
        android:inputType="text"
        android:paddingTop="5dp"
        android:paddingBottom="25dp" />

    <TextView
        android:id="@+id/TVPasswordSU"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:text="Password"
        android:textColor="#92D36E"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/ETPasswordSU"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:paddingTop="10dp"
        android:paddingBottom="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="50dp"
        android:paddingTop="20dp">

        <CheckBox
            android:id="@+id/CheckBSu"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

        <TextView
            android:id="@+id/TVpolicesSU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:text="I agree to the"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TVTermsSu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Terms of Services"
            android:textColor="#EE6E57"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TVPolicesSU2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="and"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TVPrivacitySU"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="80dp"
            android:paddingBottom="50dp"
            android:text="Privacity Policy."
            android:textColor="#EE6E57"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/BTContinueSU"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:backgroundTint="#92D36E"
        android:text="Continue"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="30dp"
        android:paddingBottom="15dp">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:text="Have an Account?"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TVLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sing In"
            android:textColor="#C1D045"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>