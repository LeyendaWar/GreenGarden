<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    tools:context=".CategoryActivity">

    <LinearLayout
        android:id="@+id/LLExit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingLeft="360dp">

        <ImageView
            android:id="@+id/ExitH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icons8_salida_32" />
    </LinearLayout>

    <ImageView
        android:id="@+id/IVCategory"
        android:layout_width="142dp"
        android:layout_height="142dp"
        app:srcCompat="@drawable/smart_farm" />

    <TextView
        android:id="@+id/TVCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="35dp"
        android:text="GreenGarden"
        android:textColor="#72BB53"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingTop="30dp"
        android:paddingRight="12dp"
        android:paddingBottom="50dp">

        <Button
            android:id="@+id/BTAguaC"
            android:layout_width="290dp"
            android:layout_height="180dp"
            android:backgroundTint="#AEDD94"
            android:drawableLeft="@drawable/agua2"
            android:text="Agua"
            android:textColor="#212121"
            android:textSize="34sp"
            android:textStyle="bold"
            app:cornerRadius="5dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:paddingBottom="80dp">

        <Button
            android:id="@+id/BTAbonoC"
            android:layout_width="290dp"
            android:layout_height="180dp"
            android:backgroundTint="#AEDD94"
            android:drawableLeft="@drawable/fertilizante2"
            android:text="Abono"
            android:textColor="#212121"
            android:textSize="34sp"
            android:textStyle="bold"
            app:cornerRadius="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/IVhomeC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/icons8_casa_24" />

        <ImageView
            android:id="@+id/IMProfileC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/icons8_profile_24" />

        <ImageView
            android:id="@+id/IVBusqC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/icons8_search_24" />

        <ImageView
            android:id="@+id/IVConfC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/icons8_herramienta_24" />
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>